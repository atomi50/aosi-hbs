<div class="d-flex flex-column flex-md-row justify-content-between my-2 align-items-start align-items-md-center">
    <div>
        <p class="text-black fw-bold d-inline">
            {{text}}
        </p>
        <span>({{code}})</span>
    </div>
    <div class="d-flex  align-items-center ">
        <span class="me-2">{{sign}}</span>
        {{#if select}}
            <select class="form-select" style="padding-left:18px" aria-label="odaberite opciju">
                {{#each options}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        {{else}}
            <div>
                <label for="{{code}}" class="form-label visually-hidden" aria-label="{{code}}">inputLabel</label>
                <input type="{{input.type}}" class="form-control" id="{{code}}" placeholder=" {{input.placeholder}}" />
            </div>
        {{/if}}
    </div>
</div>